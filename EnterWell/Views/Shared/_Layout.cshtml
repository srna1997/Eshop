<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eshop</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
            body{
                background-color:antiquewhite !important;
                color:cadetblue;
            
            }
            .navbar-custom {
                background-color: lightgreen;
            }

            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-text {
                color: green;
            
            }

            .navbar-custom a {
                color: brown;
            } 
            
    </style>
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Eshop", "Index", "Store", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Store", "Index", "Store")</li>
                    @if (User.Identity.IsAuthenticated == true)
                    {
                        <li>@Html.ActionLink("Bills", "Bills", "Order")</li>
                    }
                    @if (User.Identity.Name == "e@gmail.com")
                    {     
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">@Html.ActionLink("StoreManager", "Index", "StoreManager")</a><br />
                                <a class="dropdown-item" href="#">@Html.ActionLink("Orders", "Index", "Order")</a>
                            </div>

                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")

                @if (User.Identity.IsAuthenticated)
                {
            <ul class="nav navbar-nav navbar-right">
                <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
            </ul>
                 }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p >&copy; @DateTime.Now.Year -Eshop</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
